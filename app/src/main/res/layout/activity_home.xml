<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Greeting Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/welcomeText"
                    android:text="@string/greeting_text"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="#3F51B5"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Summary Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:padding="16dp">

                <!-- Income Card -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/income_card_bg"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:text="@string/income_zero"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Expenses Card -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/expense_card_bg"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:text="@string/expenses_zero"
                        android:textSize="14sp"
                        android:textColor="#C62828"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Savings Card -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/savings_card_bg"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:text="@string/savings_zero"
                        android:textSize="14sp"
                        android:textColor="#1565C0"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation Buttons Grid -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Row 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChatbot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="@string/chatbot"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginEnd="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBudget"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="@string/budget_tracker"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#FF9800"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCalculators"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="@string/calculator"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginEnd="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVault"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="@string/document_vault"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#9C27B0"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoals"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="@string/financial_goals"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#3F51B5"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginEnd="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDashboard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="DashBoard"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#64B5F6"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Single Button Row -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReminders"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Expense Reminders"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FF5722"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>