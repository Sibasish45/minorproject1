<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:ignore="Autofill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sip_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Monthly Investment -->
        <EditText
            android:id="@+id/etMonthlyInvestment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/monthly_investment_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:autofillHints="none"
            style="?attr/editTextStyle" />

        <!-- Expected Annual Return -->
        <EditText
            android:id="@+id/etInterestRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="@string/expected_return_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:autofillHints="none"
            style="?attr/editTextStyle" />

        <!-- Investment Duration -->
        <EditText
            android:id="@+id/etYears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="@string/investment_duration_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:padding="12dp"
            android:autofillHints="none"
            style="?attr/editTextStyle" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculateSip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/calculate"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/white" />

        <!-- Result -->
        <TextView
            android:id="@+id/tvSipResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingTop="20dp" />

    </LinearLayout>
</ScrollView>
