<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Required for Firebase Internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginSignupApp"
        tools:targetApi="31">



        <activity
            android:name=".welcome"
            android:exported="false" /> <!-- âœ… SplashActivity as the launcher screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CalculatorMenuActivity" />
        <activity android:name=".EmiCalculatorActivity" />
        <activity android:name=".SipCalculatorActivity" />
        <activity android:name=".TaxCalculatorActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ChatbotActivity" />
        <activity android:name=".BudgetActivity" />
        <activity android:name=".GoalsActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".ReminderActivity" />
        <activity android:name=".ReminderListActivity" />

        <receiver android:name=".ReminderReceiver" />

        <activity android:name=".DocumentVaultActivity" /> <!-- LoginActivity: Firebase login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- SignupActivity: User registration screen -->
        <activity
            android:name=".SignupActivity"
            android:exported="true" /> <!-- MainActivity: Home screen after login -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>